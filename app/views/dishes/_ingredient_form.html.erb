<%= f.fields_for :ingredient do |i| %>
  <div class="row">
    <div class="col-md-9">
      <div class="form-group">
        <%= i.text_field :name, class: 'form-control ingredient_name' %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <%= i.text_field :quantity, class: 'form-control ingredirnt_quantity' %>
      </div>
    </div>
  </div>
<% end %>